<%include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label>Title</label>
            <input required type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input required type="text" name="blog[image]" placeholder="image url">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea required name="blog[body]" placeholder="You can enter text here. Feel free to use html to format your words!"></textarea>
        </div>
        <input class="ui teal big basic button" type="submit">
    </form>
</div>
<%include partials/footer%>